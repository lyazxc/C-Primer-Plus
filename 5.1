/*分钟转换小时分钟*/
#include<stdio.h>
#define MIN 60
int main(void)
{
	int time;
	int hour;
	int min;
	printf("Please Enter Time(min): \n");
	scanf("%d",&time);
	while (time > 0 )
	{
		hour = time / MIN ;
		min	= time % MIN ;
		printf("%d,hour  %d,min \n",hour,min);
		scanf("%d",&time);
	}
	printf("End");
	return 0;
 } 
